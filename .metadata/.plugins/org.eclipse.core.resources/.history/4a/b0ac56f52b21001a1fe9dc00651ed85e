package algo.leet.code;

import java.util.HashMap;
import java.util.Map.Entry;

public class Isomorfic {
    public boolean isIsomorphic(String s, String t) {
        if(s.length() != t.length()){
            return false;
        }
        int i=0;
        HashMap<Character, Character> map = new HashMap<>();
        while(i<s.length()){
        	if(!map.containsKey(t.charAt(i))){
                map.put(t.charAt(i),s.charAt(i));
                System.out.println(t.charAt(i) + " " + s.charAt(i));
                i++;
            }
            else{
                Character check1 = map.get(s.charAt(i));
                Character check2 = new Character(t.charAt(i));
                		System.out.println(check1+" "+check2);
                if(check1 != null && check1.equals(check2)){
                    i++;
                }
                else{
                    return false;
                }
            }  
        }
        for(Entry<Character,Character> entry:map.entrySet()) {
        	System.out.println(entry.getKey()+","+entry.getValue());
        }
        return true;
    }
    public static void main(String[] args) {
		String s="egg"; String t="add";
		Isomorfic i =new Isomorfic();
		System.out.println(i.isIsomorphic(s, t));
	}
}
