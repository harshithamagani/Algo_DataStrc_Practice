package algo.leet.code;
/**
 * Your MinStack object will be instantiated and called as such:
 * MinStack obj = new MinStack();
 * obj.push(x);
 * obj.pop();
 * int param_3 = obj.top();
 * int param_4 = obj.getMin();
 */

class Node{
	int val;
	Node next;
	
	Node(int val){
		this.val=val;
		this.next=null;
	}
}

class MinStack {
	int min;
	Node head;
		
	public MinStack() {
       this.head = null;
    }
    
    public void push(int x) {
        Node newNode =  new Node(x);
        if(head == null) {
        	head = newNode;
        	min = newNode.val;
        	System.out.println("min:" + min);
        	return;
        }
        else {
        	if(min > x) {
        		min = x;
        	}
        	newNode.next = head;
        	head = newNode;
        }
    }
    
    public void print() {
    	Node current = head;
    	while(current != null) {
    		System.out.println(current.val);
    		current = current.next;
    	}
    }
    
    public void pop() {
        head = head.next;
    }
    
    public int top() {
    	if(head != null) {
    		System.out.println(head.val);
    		return head.val;
    	}
    	else {
    		System.out.println(head.val);
    		return 0;
    	}
    }
    
    public int getMin() {
    	System.out.println(min);
        return min;
    }
    
    public static void main(String[] args) {
    	MinStack minStack = new MinStack();
    	minStack.push(-2);
    	minStack.push(0);
    	minStack.push(-3);
    	minStack.print();
    	System.out.println("print all values in stack");
    	minStack.getMin();   //--> Returns -3.
    	minStack.pop();
    	minStack.top();     // --> Returns 0.
    	minStack.getMin();   //--> Returns -2.
	}
}


